<div class="container">
  <div class="well">
    <%= link_to "New Account", new_account_path, remote: true, class: "btn btn-primary" %>
  </div>
  <div class="new-account"></div>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Account Balance</th>
        <td>&nbsp;</td>
      </tr>
    </thead>
    <tbody class="account-index">
      <%= render "index" %>
    </tbody>
  </table>
</div>
<div id="account-modal" class="modal fade"></div>