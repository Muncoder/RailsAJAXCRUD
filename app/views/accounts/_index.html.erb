<% @accounts.each do |account| %>
  <tr>
    <td><%= account.name %></td>
    <td><%= account.balance_amount %></td>
    <td>
    	<%= link_to 'Show', account_path(account), remote: true, class: "btn btn-default btn-xs" %>
		<%= link_to 'Edit', edit_account_path(account), remote: true, class: "btn btn-default btn-xs" %>
		<%= link_to 'Delete', account_delete_path(account), remote: true, class: "btn btn-danger btn-xs" %>
		<%= link_to 'Deposit by STRIPE', account_deposit_path(account), remote: true, class: "btn btn-success" %>
    </td>
  </tr>
<% end %>