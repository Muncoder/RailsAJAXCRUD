<% @students.each do |student| %>
	<tr>
		<td><%= student.name %></td>
		<td><%= student.age %></td>
		<td><%= link_to 'Delete', student_path(student), method: :delete, data: {confirm: 'Sure to delete?'}, remote: true, class: "btn btn-xs btn-danger" %></td>
		<td><%= link_to 'Edit Name', edit_student_path(student, edit_status: 'name'), remote: true, class: "btn btn-xs btn-info" %></td>

	</tr>
<% end %>
